.photo
  div(data-ng-click='card.showIndex = !card.showIndex')
    .photo-index(data-ng-if='card.showIndex')
      p Super Deal On
      p.balloon-wrapper
        span.balloon {{card.$index}}
    .photo-wrapper
      img.img-responsive(src='', data-ng-src='{{card.src}}', data-imageloaded='', data-loadedclass='photoloaded')
      .photo-loader
        .sk-spinner.sk-spinner-rotating-plane
    .photo-description
      h3 {{card.name}}
      p {{card.desc}}
